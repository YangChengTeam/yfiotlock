<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayBg">

    <com.yc.yfiotlock.view.widgets.BackNavBar
        android:id="@+id/bnb_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:text="新建家庭" />

    <com.yc.yfiotlock.view.widgets.RightNextTextView
        android:id="@+id/tv_family_add_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textColor="#ff999999"
        android:textSize="13sp"
        app:des="请输入家庭名称"
        app:layout_constraintTop_toBottomOf="@id/bnb_title"
        app:text="家庭名称" />

    <com.yc.yfiotlock.view.widgets.RightNextTextView
        android:id="@+id/tv_family_add_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textColor="#ff999999"
        android:textSize="13sp"
        app:des="请选择家庭位置"
        app:layout_constraintTop_toBottomOf="@id/tv_family_add_name"
        app:text="家庭位置" />

    <com.yc.yfiotlock.view.widgets.RightNextTextView
        android:id="@+id/tv_family_add_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textColor="#ff999999"
        android:textSize="13sp"
        app:des="请输入详细地址（非必填）"
        app:hideLine="true"
        app:layout_constraintTop_toBottomOf="@id/tv_family_add_location"
        app:text="详细地址" />


    <com.coorchice.library.SuperTextView
        android:id="@+id/stv_add"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_family_add_address"
        app:stv_corner="18dp"
        app:stv_pressBgColor="@color/pressedColor"
        app:stv_shaderEnable="true"
        app:stv_shaderEndColor="#338DFC"
        app:stv_shaderMode="topToBottom"
        app:stv_shaderStartColor="#34A2FF" />


</androidx.constraintlayout.widget.ConstraintLayout>