<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:paddingStart="15dp"
    android:paddingEnd="15dp">

    <ImageView
        android:id="@+id/iv_log_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/alarm"
        app:layout_constraintBottom_toBottomOf="@id/tv_location_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_location_name" />

    <TextView
        android:id="@+id/tv_location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="@string/app_name"
        android:textColor="#222222"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@id/iv_log_icon"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_log_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="#222222"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_location_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_location_name" />

    <TextView
        android:id="@+id/tv_location_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="4dp"
        android:text="@string/app_name"
        android:textColor="#999999"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_log_icon"
        app:layout_constraintTop_toBottomOf="@id/tv_location_name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#EDEDED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_location_des" />

</androidx.constraintlayout.widget.ConstraintLayout>