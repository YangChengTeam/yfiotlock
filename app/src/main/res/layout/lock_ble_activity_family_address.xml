<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayBg">

    <com.yc.yfiotlock.view.widgets.BackNavBar
        android:id="@+id/view_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:text="设置家庭详细地址" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="@id/view_nav_bar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_nav_bar">

        <TextView
            android:id="@+id/tv_family_address_sure"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackgroundBorderless"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/sure"
            android:textColor="#222222"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <EditText
        android:id="@+id/et_family_address"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:gravity="start|top"
        android:hint="请输入家庭详细地址（非必填）"
        android:maxLength="150"
        android:paddingLeft="15dp"
        android:paddingTop="12dp"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="12dp"
        android:textColor="#222222"
        android:textColorHint="#B6B4B4"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/view_nav_bar" />


</androidx.constraintlayout.widget.ConstraintLayout>