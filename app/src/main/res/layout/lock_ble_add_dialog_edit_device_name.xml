<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="252dp"
        android:layout_height="162dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6.67dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:src="@mipmap/icon_cancel" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/edit_name"
                android:textColor="#000000"
                android:textSize="16dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="208dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="#F6F6F6"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/et_no_underline"
                    android:hint="@string/please_input_lock_name"
                    android:paddingStart="13dp"
                    android:paddingEnd="13dp"
                    android:textColor="#222222"
                    android:textColorHint="#999999"
                    android:textSize="13dp" />
            </androidx.cardview.widget.CardView>

            <com.coorchice.library.SuperTextView
                android:id="@+id/stv_sure"
                android:layout_width="208dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="@string/sure"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:stv_corner="20dp"
                app:stv_pressBgColor="@color/pressedColor"
                app:stv_shaderEnable="true"
                app:stv_shaderEndColor="@color/color_end"
                app:stv_shaderMode="topToBottom"
                app:stv_shaderStartColor="@color/color_start" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>