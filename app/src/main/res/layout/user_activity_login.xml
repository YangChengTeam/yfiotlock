<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg_white">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="106dp"
        android:src="@mipmap/us_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_width="284dp"
        android:layout_height="40dp"
        android:layout_marginTop="230dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:text="@string/_86"
            android:textColor="#222222"
            app:drawableEndCompat="@mipmap/login_icon_arrow" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="13dp"
            android:layout_weight="1"
            android:background="@drawable/et_bg"
            android:hint="@string/please_input_phone_number"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="#222222"
            android:textColorHint="#999999"
            android:textSize="15dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_fast_login"
        android:layout_width="wrap_content"
        android:textSize="12dp"
        android:background="?android:selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/ll_phone"
        app:layout_constraintEnd_toEndOf="@id/ll_phone"
        android:layout_marginTop="10dp"
        android:textColor="#3395FD"
        android:text="@string/local_phone_one_key_login"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_get_code"
        android:layout_width="284dp"
        android:layout_height="42dp"
        android:layout_marginTop="53dp"
        android:background="@drawable/fast_login_press"
        android:clickable="false"
        android:gravity="center"
        android:text="@string/get_sms_code"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_phone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/get_code_tip"
        android:textColor="#999999"
        android:textSize="13dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_get_code" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_representative_agrees"
            android:textColor="#999999"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_user_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_agreement"
            android:textColor="#3395FD"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comma"
            android:textColor="#BDBDC1"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/privacy_policy"
            android:textColor="#3395FD"
            android:textSize="13dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>