<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="15dp"
    android:paddingEnd="15dp">


    <TextView
        android:id="@+id/tv_location_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:ellipsize="end"
        android:layout_marginTop="6dp"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="#222222"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_location_select"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_location_des"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginRight="25dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/app_name"
        android:layout_marginBottom="6dp"
        android:textColor="#999999"
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_location_select"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_location_name" />

    <ImageView
        android:id="@+id/iv_location_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/sel_no"
        app:layout_constraintBottom_toBottomOf="@id/tv_location_des"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_location_name" />

    <View
        android:id="@+id/view_line_location"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/grayBg"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>