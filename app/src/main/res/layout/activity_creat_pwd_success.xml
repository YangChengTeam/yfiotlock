<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.yc.yfiotlock.view.widgets.BackNavBar
        android:id="@+id/view_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:text="创建密码成功"
        app:textPosition="center" />

    <ImageView
        android:id="@+id/iv_creat_success_icon"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@mipmap/secret_succeed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_nav_bar" />

    <TextView
        android:id="@+id/iv_creat_success_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="创建成功了!"
        android:textColor="#ff222222"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_creat_success_icon" />

    <LinearLayout
        android:id="@+id/ll_creat_success_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_creat_success_des">

        <TextView
            android:id="@+id/tv_creat_success_num1"
            android:layout_width="39dp"
            android:layout_height="46dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shap_solid_gray"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_creat_success_num2"
            android:layout_width="39dp"
            android:layout_height="46dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shap_solid_gray"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_creat_success_num3"
            android:layout_width="39dp"
            android:layout_height="46dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shap_solid_gray"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_creat_success_num4"
            android:layout_width="39dp"
            android:layout_height="46dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shap_solid_gray"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_creat_success_num5"
            android:layout_width="39dp"
            android:layout_height="46dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shap_solid_gray"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_creat_success_num6"
            android:layout_width="39dp"
            android:layout_height="46dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shap_solid_gray"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="25dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_creat_success_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="?android:selectableItemBackground"
        android:padding="5dp"
        android:text="复制密码"
        android:textColor="#ff3395fd"
        android:textSize="13sp"
        app:layout_constraintRight_toRightOf="@id/ll_creat_success_number"
        app:layout_constraintTop_toBottomOf="@id/ll_creat_success_number" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">


        <com.coorchice.library.SuperTextView
            android:id="@+id/stv_btn_share"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="18dp"
            android:gravity="center"
            android:text="分享到微信"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/stv_btn_finish"
            app:stv_corner="18dp"
            app:stv_pressBgColor="@color/pressedColor"
            app:stv_shaderEnable="true"
            app:stv_shaderEndColor="#34A2FF"
            app:stv_shaderMode="topToBottom"
            app:stv_shaderStartColor="#34A2FF" />

        <com.coorchice.library.SuperTextView
            android:id="@+id/stv_btn_finish"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@string/finish_open_type"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:stv_corner="18dp"
            app:stv_pressBgColor="@color/pressedColor"
            app:stv_shaderEnable="true"
            app:stv_shaderEndColor="@color/color_end"
            app:stv_shaderMode="topToBottom"
            app:stv_shaderStartColor="@color/color_start" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>