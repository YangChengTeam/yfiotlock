<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.yc.yfiotlock.view.widgets.BackNavBar
        android:id="@+id/bnb_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:text="创建密码成功"
        app:textPosition="center" />

    <ImageView
        android:id="@+id/iv_creat_success_icon"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@mipmap/secret_succeed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bnb_title" />

    <TextView
        android:id="@+id/iv_creat_success_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="创建成功了!"
        android:textColor="#ff222222"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_creat_success_icon" />

    <LinearLayout
        android:id="@+id/ll_creat_success_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_creat_success_des">

        <TextView
            android:id="@+id/tv_creat_success_num1"
            android:layout_width="39dp"
            android:layout_height="46dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shap_solid_gray"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_creat_success_num2"
            android:layout_width="39dp"
            android:layout_height="46dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shap_solid_gray"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_creat_success_num3"
            android:layout_width="39dp"
            android:layout_height="46dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shap_solid_gray"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_creat_success_num4"
            android:layout_width="39dp"
            android:layout_height="46dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shap_solid_gray"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_creat_success_num5"
            android:layout_width="39dp"
            android:layout_height="46dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shap_solid_gray"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_creat_success_num6"
            android:layout_width="39dp"
            android:layout_height="46dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shap_solid_gray"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="25dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_creat_success_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="?android:selectableItemBackground"
        android:padding="5dp"
        android:text="复制密码"
        android:textColor="#ff3395fd"
        android:textSize="13sp"
        app:layout_constraintRight_toRightOf="@id/ll_creat_success_number"
        app:layout_constraintTop_toBottomOf="@id/ll_creat_success_number" />

</androidx.constraintlayout.widget.ConstraintLayout>